<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <corners android:radius="10dp"/>
    
    <!-- Explicitly set to fully transparent  
    	 format #AARRGGBB where AA is alpha (00 full transparency, FF full solidity)-->
   	<!-- On most tested devices the effect would be achieved by not specifying solid at all,
   		 however that doesn't work on Samsung GT-S6310N running 4.1.2, might be due to themes
   		 or something like that.  -->
    <solid android:color="#00000000"/>
    
    <stroke android:width="3dp"
        android:color="#000000"/>
   

</shape>
